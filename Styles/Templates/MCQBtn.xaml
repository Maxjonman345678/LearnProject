<UserControl x:Class="Learn.Styles.Templates.MCQBtn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Learn.Styles.Templates"
             mc:Ignorable="d" 
             d:DesignHeight="125" d:DesignWidth="300">
    <Button x:Name="MCQBtn_BTN" Style="{StaticResource QuickLearnMCQBtn}" Click="MCQBtn_Click" Margin="10">
        <Button.Resources>
            <Style TargetType="{x:Type Border}">
                <Setter Property="CornerRadius" Value="15"/>
            </Style>
        </Button.Resources>
        <TextBlock x:Name="MCQTB" Text="" TextWrapping="Wrap" Foreground="{StaticResource WhiteBrush}" FontSize="14" Margin="3,0,3,0"/>
    </Button>
</UserControl>
